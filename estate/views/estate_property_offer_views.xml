<odoo>
  <!-- List View -->
  <record id="view_estate_property_offer_list" model="ir.ui.view">
    <field name="name">estate.property.offer.list</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <list string="Property Offers"
      editable="bottom" 
      decoration-success="status == 'accepted'"
      decoration-danger="status == 'refused'">
        <field name="price"/>
        <field name="partner_id"/>
          <field name="property_id"/>
        <field name="property_type_id"/>
        <field name="status"/>
      </list>
    </field>
  </record>



  <!-- Form View -->
  <record id="view_estate_property_offer_form" model="ir.ui.view">
    <field name="name">estate.property.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form string="Property Offer">
<header>
  <button name="action_accept" type="object" string="Accept"
          class="oe_highlight"
          invisible="status != False"/>
  <button name="action_refuse" type="object" string="Refuse"
          invisible="status != False"/>
  <field name="status" widget="statusbar" statusbar_visible="accepted,refused"/>
</header>

        <sheet>
          <group>
            <field name="price"/>
            <field name="partner_id"/>
                <field name="property_id"/>
            <field name="property_type_id" readonly="1"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            <field name="status"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search -->
  <record id="view_estate_property_offer_search" model="ir.ui.view">
    <field name="name">estate.property.offer.search</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <search string="Search Offers">
        <field name="partner_id"/>
        <field name="property_id"/>
        <field name="property_type_id"/>
        <filter name="accepted" string="Accepted" domain="[('status','=','accepted')]"/>
        <filter name="refused" string="Refused" domain="[('status','=','refused')]"/>
      </search>
    </field>
  </record>


<!-- Action -->
<record id="estate_property_offer_action" model="ir.actions.act_window">
  <field name="name">Offers</field>
  <field name="res_model">estate.property.offer</field>
  <field name="view_mode">list,form</field>
  <field name="search_view_id" ref="view_estate_property_offer_search"/>
</record>






</odoo>
